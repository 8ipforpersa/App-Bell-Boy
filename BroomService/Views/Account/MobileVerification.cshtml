
@{
    ViewBag.Title = "Mobile Verification";
}
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!-- Font awsome kit -->
    <script src="https://kit.fontawesome.com/40b745dcd8.js" crossorigin="anonymous"></script>

    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Content/owl.theme.default.min.css" rel="stylesheet" />
    <!-- Custom Css -->
    <link rel="stylesheet" href="~/Content/style.css" />
    <title>Home:: Bell Boy Services</title>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
</head>
<body>
    <!-- Login Section -->
    <section class="login_main d-flex align-items-center justify-content-center">
        <div class="container">
            <div class="login_box mx-auto">
                <div class="login_content mx-auto">
                    <div class="d-block d-sm-flex justify-content-between">
                        <a href="/Home/Index"><img src="~/Content/images/logo_login.png" class="back_home" alt="image of coloured logo" /></a>
                        <a href="/Home/Index" class="back_home align-self-center"><img src="~/Content/images/back_to_home_arrow.png" alt="back arrow" />Back</a>
                    </div>
                    <h2>Verification</h2>
                    <h3>To Proceed Verify Your Account</h3>
                    <div class="login_form">
                        <form>
                            <div class="form-group">
                                <label class="sr-only">User Id</label>
                                <div class="custom_input">
                                    <input type="number" class="form-control form_edit_input" id="UserId" name="User Id" placeholder="User Id" autocomplete="off" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="sr-only">Verification</label>
                                <div class="custom_input">
                                    <input type="number" class="form-control form_edit_input" id="VerifyOTP" name="user" placeholder="Verification Code *" autocomplete="off" required>
                                </div>
                            </div>
                            <div class="d-flex justify-content-end">
                                <input type="hidden" id="otpCode" value="@(Session["SMSCode"] != null ? Session["SMSCode"].ToString():"")" />
                                <button type="submit" id="btnSubmit" class="btn arrow_btn_box"><img src="~/Content/images/submit_next_btn.png" alt="next arrow" /></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Optional JavaScript -->
    <script type="text/javascript">
    $(document).ready(function () {
        $('#btnSubmit').click(function () {
        var uId = $('#UserId').val();
            var Code = $('#VerifyOTP').val();
                    $.ajax({
                         type: 'POST',                       
                         url: '@Url.Action("CheckMobileVerification", "Account")',
                         data :
                         {
                             "UserId": uId ,
                             "OtpCode": Code 
                         },
                        success: function (data) {                           
                            if(data)
                            {
                                alert("Register successfully check your email verification ");

                                window.location.href = "https://bellboy.azurewebsites.net/";
                             }
                         },
                         error: function (error) {
                                 alert('Something went wrong Please try again');
                             }
                     });
         });
      });
    </script>
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>





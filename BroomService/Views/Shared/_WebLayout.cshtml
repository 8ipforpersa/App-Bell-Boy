        /*css form language popup*/
        .inputGroup {
            background-color: #fff;
            display: inline-block;
            margin: 10px 0;
            position: relative;
            width: 49%;
        }

            .inputGroup input {
                width: 32px;
                height: 32px;
                order: 1;
                z-index: 2;
                position: absolute;
                right: 30px;
                top: 50%;
                -webkit-transform: translateY(-50%);
                transform: translateY(-50%);
                cursor: pointer;
                visibility: hidden;
            }

            .inputGroup label {
                padding: 8px 20px 8px 60px;
                width: 100%;
                display: block;
                text-align: left;
                font-size: 20px;
                font-weight: 400;
                cursor: pointer;
                position: relative;
                z-index: 2;
                transition: color 200ms ease-in;
                overflow: hidden;
                margin-bottom: 0;
                border: 2px solid #ccc;
                border-radius: 8px;
                transition: border 300ms;
            }

                .inputGroup label:before {
                    width: 10px;
                    height: 10px;
                    border-radius: 50%;
                    content: '';
                    background-color: #214378;
                    position: absolute;
                    left: 50%;
                    top: 50%;
                    -webkit-transform: translate(-50%, -50%) scale3d(1, 1, 1);
                    transform: translate(-50%, -50%) scale3d(1, 1, 1);
                    transition: all 300ms cubic-bezier(0.4, 0, 0.2, 1);
                    opacity: 0;
                    z-index: -1;
                }

                .inputGroup label:after {
                    width: 32px;
                    height: 32px;
                    content: '';
                    border: 2px solid #D1D7DC;
                    background-color: #fff;
                    background-image: url("data:image/svg+xml,%3Csvg width='32' height='32' viewBox='0 0 32 32' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M5.414 11L4 12.414l5.414 5.414L20.828 6.414 19.414 5l-10 10z' fill='%23ccc' fill-rule='nonzero'/%3E%3C/svg%3E ");
                    background-repeat: no-repeat;
                    background-position: 2px 3px;
                    border-radius: 50%;
                    z-index: 2;
                    position: absolute;
                    left: 15px;
                    top: 50%;
                    -webkit-transform: translateY(-50%);
                    transform: translateY(-50%);
                    cursor: pointer;
                    transition: all 200ms ease-in;
                }

        .checklist_property_main button.choose_language_done, .checklist_property_main button.choose_language_done:hover {

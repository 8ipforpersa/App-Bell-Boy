    <script>
        $(document).ready(function () {

            var cookieValue = "@Request.Cookies["culture"].Value.ToLower()";
            $("input[name=radio]").each(function () {
                if (this.id.toLowerCase() == cookieValue.toLowerCase()) {
                    $(this).prop('checked', true);
                }
            });

            $(".choose_language_done").click(function () {
                var selectedValue = $('input[name=radio]:checked').attr('id');
                window.location.href = "/Home/ChangeLanguage?lang=" + selectedValue;
            });

             $('#ServiceLink').click(function () {

                 var userId = @(Request.Cookies["Login"] != null ? Request.Cookies["Login"].Values["UserId"]!=null? Request.Cookies["Login"].Values["UserId"] :"0" :"0");


               if(userId =='0')
               {
                   window.location.href = '/Order/CategoryList?propertyId = 0';
               }
               else
               {
                   $.ajax({
                    url: "@Url.Action("GetPropertyCount", "Order")",
                    data: { "UserId": userId},
                    type: 'POST',
                    success: function (data) {
                        if (data == '0')
                        {
                            $("#modalNotify").modal('show');
                        }
                        else
                        {
                            window.location.href = '/Order/CategoryList?propertyId = 0';
                        }
                    },
                    error: function () {
                        alert('something went wrong');
                    }
                  });
               }
             });

            $.ajax({
                url: '/Account/Balance',
                typr: "GET",
                success: function (data) {
                    $('#account-balance').text(data);
                }
            });

            $('#property_list_slider').owlCarousel({
                loop: true,
                center: true,
                margin: 20,
                nav: true,
                dots: false,
                autoplay: false,
                autoplayTimeout: 1500,
